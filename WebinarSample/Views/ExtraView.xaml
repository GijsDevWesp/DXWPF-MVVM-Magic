<UserControl
    x:Class="Webinar.Views.ExtraView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:Webinar.ViewModels"
    xmlns:local="clr-namespace:Webinar"
    mc:Ignorable="d"
    DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:ExtraViewModel}}">
    <dxmvvm:Interaction.Behaviors>
        <dx:DXMessageBoxService />
        <dx:NotifyIconService Icon="{dx:DXImage 'Images/XAF/State_Validation_Warning_48x48.png'}" LeftClickCommand="{Binding IconLeftClickCommand}">
            <dx:NotifyIconService.ContextMenu>
                <dxb:PopupMenu>
                    <dxb:BarItemMenuHeader Content="NotifyIconService's Menu ">
                        <dxb:BarItemMenuHeader.ContentTemplate>
                            <DataTemplate>
                                <TextBlock FontSize="10" Text="hoi" />
                            </DataTemplate>
                        </dxb:BarItemMenuHeader.ContentTemplate>
                        <dxb:BarButtonItem Content="knoppie" Command="{Binding IconLeftClickCommand}" />
                        <dxb:BarItemSeparator />
                        <dxb:BarButtonItem Content="Cancel" Glyph="{dx:DXImage Image=Delete_16x16.png}" />
                        <!--<dxb:BarButtonItem Content="Aardbei"  Command="{Binding AboutCommand}" Glyph="{dx:DXImage Image=Information_16x16.png}"/>-->
                    </dxb:BarItemMenuHeader>
                </dxb:PopupMenu>
            </dx:NotifyIconService.ContextMenu>
        </dx:NotifyIconService>
        <dxmvvm:NotificationService
            PredefinedNotificationTemplate="LongText"
            UseWin8NotificationsIfAvailable="True"
            ApplicationActivator="{x:Type local:CustomNotificationActivator}"
            CreateApplicationShortcut="False"
            ApplicationName="{x:Static local:MainWindow.ApplicationName}"
            CustomNotificationDuration="00:00:10">
            <dxmvvm:NotificationService.ApplicationId>
                <Binding Source="{x:Static local:MainWindow.ApplicationID}" />
            </dxmvvm:NotificationService.ApplicationId>
        </dxmvvm:NotificationService>
    </dxmvvm:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
        </Grid.RowDefinitions>
        <dxg:GridControl
            x:Name="grid"
            Grid.Row="0"
            AutoGenerateColumns="AddNew"
            EnableSmartColumnsGeneration="True"
            ItemsSource="{Binding Tracks}">
            <dxg:GridControl.View>
                <dxg:TableView
                    AllowColumnFiltering="True"
                    AllowEditing="False"
                    AllowPaging="True"
                    AllowPerPixelScrolling="True"
                    PageSize="20"
                    ShowSearchPanelMode="Always"
                    ShowTotalSummary="False"
                    VerticalScrollbarVisibility="Hidden" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        <Button 
Height="20px"
            Grid.Row="1"
        Command="{Binding ShowNotificationCommand}"
            Content="Custom notificatie"/>
    </Grid>
</UserControl>