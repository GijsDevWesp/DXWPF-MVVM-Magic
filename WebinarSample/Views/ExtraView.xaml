            </dx:NotifyIconService.ContextMenu>
        </dx:NotifyIconService>-->

        <!--<dxmvvm:NotificationService x:Name="ServiceWithCustomNotifications" CustomNotificationTemplate="{StaticResource CustomNotificationTemplate}"/>-->
        <dxmvvm:NotificationService
            x:Name="notificationService"
            ApplicationId="WESP Control Center"
            CreateApplicationShortcut="True"
            PredefinedNotificationTemplate="ShortHeaderAndTwoTextFields"
            UseWin8NotificationsIfAvailable="True" />
    </dxmvvm:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20px" />
        </Grid.RowDefinitions>
        <dxg:GridControl
            x:Name="grid"
            Grid.Row="0"
            AutoGenerateColumns="AddNew"
            EnableSmartColumnsGeneration="True"
            SelectionMode="Row"
            ItemsSource="{Binding Tracks}"
            SelectedItems="{Binding SelectedTracks}">
            <dxg:GridControl.View>
                <dxg:TableView
                    AllowColumnFiltering="True"
                    AllowEditing="False"
                    AllowPaging="True"
                    AllowPerPixelScrolling="True"
                    PageSize="20"
                    ShowSearchPanelMode="Always"
                    ShowTotalSummary="False"
                    NavigationStyle="Row"
                    VerticalScrollbarVisibility="Hidden">
                    <dxg:TableView.RowCellMenuCustomizations>
                        <!--Zie die zieke command binding: WERKT!!!-->
                        <dxb:BarButtonItem
                            Command="{Binding View.DataContext.DeleteRowCommand, Mode=OneWay}" 
                            CommandParameter="{Binding CurrentItem, ElementName=grid}"
                            Content="Verwijderen"
                            Glyph="{dx:DXImage 'Images/Spreadsheet/DeleteSheetRows_16x16.png'}" />
                        <dxb:BarButtonItem
                            Command="{Binding View.DataContext.ShowNotificationCommand}"
                            Content="Laat notificatie zien"
                            Glyph="{dx:DXImage 'Images/XAF/Notifications.png'}" />
                        <dxb:BarButtonItem
                            Content="Cancel"
                            Glyph="{dx:DXImage 'Images/Actions/Cancel_16x16.png'}" />
                    </dxg:TableView.RowCellMenuCustomizations>
                </dxg:TableView>
            </dxg:GridControl.View>
        </dxg:GridControl>
        <dx:WaitIndicator
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding WaitIndicatorText}"
            DeferedVisibility="{Binding IsWaitIndicatorVisible}" />
        <Button
            Grid.Row="1"
            Height="20px"
            Command="{Binding ShowNotificationCommand}"
            Content="Custom notificatie" />
    </Grid>
</UserControl>